<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <ImageView
        android:id="@+id/cat_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/cat"
        android:contentDescription="@string/cat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dog_image"
        app:layout_constraintBottom_toTopOf="@+id/elephant_image" />

    <ImageView
        android:id="@+id/dog_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dog"
        android:contentDescription="@string/dog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cat_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frog_image" />

    <ImageView
        android:id="@+id/elephant_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/elephant"
        android:contentDescription="@string/elephant"
        app:layout_constraintTop_toBottomOf="@+id/cat_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/frog_image"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/frog_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/frog"
        android:contentDescription="@string/frog"
        app:layout_constraintTop_toBottomOf="@+id/dog_image"
        app:layout_constraintStart_toEndOf="@+id/elephant_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
